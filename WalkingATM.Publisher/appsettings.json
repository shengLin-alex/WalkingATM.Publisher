{
  "LinebotGrpcHost": "https://www.bot.bluebloods.autos:1443",
  "StockPriceServiceClient" : "StockPriceServiceClient",
  "PushLogDataJobCron": "2/2 * * * *",
  "StopPushJobCron": "3/2 * * * *",
  "XQLogFilePath": "/Users/shenglin-alex/Workspace/WalkingATM.Publisher/WalkingATM.Publisher/Data/{0}_{1}.log",
  "XQLogFileDateTimeFormat": "yyyyMMdd",
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "extensions": [
      {
        "assembly": "NLog.Extensions.Logging"
      }
    ],
    "targets": {
      "ConsoleTarget": {
        "type": "ColoredConsole",
        "layout": "${longdate} | ${uppercase:${level}} | ${logger} | ${message} ${exception:format=tostring}",
        "rowHighlightingRules": [
          {
            "condition": "level == LogLevel.Debug",
            "foregroundColor": "Gray"
          },
          {
            "condition": "level == LogLevel.Info",
            "foregroundColor": "Green"
          },
          {
            "condition": "level == LogLevel.Warn",
            "foregroundColor": "Yellow"
          },
          {
            "condition": "level == LogLevel.Error",
            "foregroundColor": "Red"
          },
          {
            "condition": "level == LogLevel.Fatal",
            "foregroundColor": "Red",
            "backgroundColor": "White"
          }
        ]
      },
      "JsonConsoleTarget": {
        "type": "Console",
        "layout": {
          "type": "JsonLayout",
          "suppressSpaces": true,
          "renderEmptyObject": false,
          "Attributes": [
            {
              "name": "time",
              "layout": "${date:format=yyyy-MM-ddTHH\\:mm\\:ss.fff}"
            },
            {
              "name": "level",
              "layout": "${uppercase:${level}}"
            },
            {
              "name": "logger",
              "layout": "${logger}"
            },
            {
              "name": "message",
              "layout": "${message}"
            },
            {
              "name": "json",
              "encode": false,
              "layout": {
                "type": "JsonLayout",
                "includeAllProperties": true,
                "suppressSpaces": true,
                "renderEmptyObject": false
              }
            },
            {
              "name": "exception",
              "layout": "${exception:format=tostring}"
            }
          ]
        }
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "finalMinLevel": "Warning",
        "writeTo": "ConsoleTarget"
      },
      {
        "logger": "System.*",
        "finalMinLevel": "Warning",
        "writeTo": "ConsoleTarget"
      },
      {
        "logger": "Microsoft.Hosting.Lifetime",
        "finalMinLevel": "Information",
        "writeTo": "ConsoleTarget"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "ConsoleTarget"
      }
    ]
  }
}
